.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.usermotto {
  margin-top: 200px;
}

page{
  display: block;
  min-height: 100%;
  position: fixed;
  background-size: 100% auto;
  margin: 0px;
  background-repeat: no-repeat;
  background-image: url('https://lg-6enwjric-1256925828.cos.ap-shanghai.myqcloud.com/my/my_top_bg.png');
}
.canvas{
    width: 100%;
    margin-left: 20rpx;
}
.invite{
  padding-top: 20rpx;
}
.ranking{
  font-size: 0.8rem;
  color: #f5ede4;
  text-align: center;
  display: flex;  
  flex-direction: column;  
  justify-content: center;  
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.ranking2 {
    width: 70%;
    height: 90rpx;
    display: flex;
    justify-content:center;
    color: #FFFFFF;
    font-size: 1.0em;
    background-size: 96% 96%;
    margin-top: 10rpx;
    margin-left: 15%;
    padding-top:14rpx; 
    background-repeat: no-repeat;
    background-position:center;
    background-image: url('https://lg-6enwjric-1256925828.cos.ap-shanghai.myqcloud.com/my/bg_me_beatrank.png');
}

.canvasOverflow{
    width: 100%;
}
.control{
    width: 100%;
    height: 100%;
}
.score {
    display: flex;
    margin-left: 1rpx;
    margin-right: 3rpx;
    /*background:#285872;*/
}
.score0{
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  display: flex;  
  flex-direction: column;  
  justify-content: center; 
}

.score1 {
    display: flex;
    margin-left: 10%;
    margin-right: 10%;
}

.rule{
  flex:1;
    background:#173645;
    color:#ff3429;
    margin: 2rpx 2rpx;
    text-align: center;
    border-radius: 2rpx;  
}

.group{
    flex:2;
    padding-top: 20rpx;
}

.group1{
    flex:1;
}

.group0{
    flex:1;
    color: #f5ede4;
    display: flex;
    flex-direction: column;
    align-items: center;       
}
.sub_group{  
  flex-direction: row;
}  
.progress{
  color:"red";
  stroke-width:"15";
  background:#6363c7;
  margin-left: 20rpx;
}

.title{
    flex:1;
    height: 120rpx;
    line-height: 120rpx;
    background:#285872;
    color:aliceblue;
    margin: 10rpx 10rpx 10rpx 10rpx;
    text-align: center;
    border-radius: 8rpx;
}

.scoredetail1{
    flex:1;
    color:aliceblue;
    margin: 10rpx;
    padding: 5rpx;
    text-align: center;
}

.buttonsStyle{
    flex:1;
    background:#edab63;
    color:aliceblue;
    margin: 2rpx 20rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size: 0.8rem;
    font-weight: bold;
}
.buttonsStyle:active {  
  background-color: #e0a30a;
}
.nametitle{
    font-weight: bold;
    font-size: 0.9rem;
    color: #F0F0F0;
}

.title2{
    font-size: 0.8rem;
    display: flex;
    justify-content: center;
}

.empirical{
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-left: 20rpx;
    font-size: 0.8rem;
    line-height: 40rpx;
    color: #000000;
}
.subtitle{
    padding-top: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    font-weight: bold;
    font-size: 0.8rem;
    line-height: 40rpx;
    color: #f5ede4;
}
.scorenumber{
    font-size: 1.0rem;
    line-height: 50rpx;
    text-align: center;
}

.nodeTitle{
    font-size: 1.0rem;
    line-height: 40rpx;
    font-weight: bold;
}
.node{
    padding-top: 10rpx;
    font-size: 1.2rem;
    line-height: 50rpx;
    text-align: center;
}

.descmax{
    font-size: 0.8rem;
    line-height: 40rpx;
}
.scoremax{
    line-height: 50rpx;
    text-align: center;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #151515;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #151515;
}

.modal-dialog {
  width: 700rpx;
  overflow: hidden;
  position: fixed;
  top: 60%;
  z-index: 9999;
  background: #252525;
  margin: 20rpx 20rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 36rpx;
  color: #dedede;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-normal {
  width: 50%;
  color: #dedede;
  text-align: center;
}

.btn-select {
  width: 50%;
  color: aliceblue;
  text-align: center;
  border-right: 1px solid #dedede;
  border-left: 1px solid #dedede;
}

.retryError{
  width: 100%;
  margin-top: 50rpx;
  text-align: center;
  font-size: 0.8rem; 
  text-decoration:underline; 
}

